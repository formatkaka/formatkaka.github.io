---
type Props = {
  title: string;
  description?: string;
  category?: 'books' | 'tech' | 'personal' | 'movies' | 'thoughts';
};

const { title, description = 'Siddhant Loya - Prose, Poetry and Tech', category } = Astro.props;

// Generate breadcrumbs from the current URL
const pathname = Astro.url.pathname;
const segments = pathname.split('/').filter(Boolean);

// Map segment names to display labels
const labelMap: Record<string, string> = {
  blogs: 'Blogs',
  tech: 'Tech',
  poetry: 'Poetry',
  books: 'Books',
  personal: 'Personal',
  movies: 'Movies',
  thoughts: 'Thoughts',
};

// Map categories to their parent section URL
const categoryToSection: Record<string, { href: string; label: string }> = {
  tech: { href: '/tech', label: 'Tech' },
  books: { href: '/blogs', label: 'Blogs' },
  personal: { href: '/blogs', label: 'Blogs' },
  movies: { href: '/blogs', label: 'Blogs' },
  thoughts: { href: '/blogs', label: 'Blogs' },
};

// Build breadcrumb items
let breadcrumbs: Array<{ href: string; label: string; isLast: boolean }>;

if (category && categoryToSection[category] && segments[0] !== categoryToSection[category].href.slice(1)) {
  // Override: show the correct section based on category
  const section = categoryToSection[category];
  const postSlug = segments[segments.length - 1];
  const postLabel = postSlug.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ');
  breadcrumbs = [
    { href: section.href, label: section.label, isLast: false },
    { href: pathname, label: postLabel, isLast: true },
  ];
} else {
  // Default: use URL-based breadcrumbs
  breadcrumbs = segments.map((segment, index) => {
    const href = '/' + segments.slice(0, index + 1).join('/');
    const label = labelMap[segment] || segment.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ');
    const isLast = index === segments.length - 1;
    return { href, label, isLast };
  });
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <style>
      @import 'tailwindcss';

      :root,
      @theme {
        --color-primary: #a6dcef;
        --bg-second: #f2eee5;
        --text-color-primary: #1b2021;
        --text-color-links: #f6ad7b;
      }
    </style>
  </head>
  <body>
    <nav class="breadcrumbs" aria-label="Breadcrumb">
      <a href="/" class="breadcrumb-link">Home</a>
      {breadcrumbs.map((crumb) => (
        <>
          <span class="breadcrumb-separator">/</span>
          {crumb.isLast ? (
            <span class="breadcrumb-current">{crumb.label}</span>
          ) : (
            <a href={crumb.href} class="breadcrumb-link">{crumb.label}</a>
          )}
        </>
      ))}
    </nav>
    <slot />
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.spoiler').forEach((spoiler) => {
          spoiler.addEventListener('click', () => {
            spoiler.classList.toggle('revealed');
          });
        });
      });
    </script>

    <style is:global>
      :root {
        --color-primary: #a6dcef;
        --bg-second: #f2eee5;
        --text-color-primary: #1b2021;
        --text-color-links: #f6ad7b;
      }

      html {
        font-family: 'Source Sans Pro';
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--color-primary);
        color: var(--text-color-primary);
      }

      body {
        width: 80%;
        max-width: 700px;
        margin-top: 60px;
      }

      /* Breadcrumbs */
      .breadcrumbs {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
      }

      .breadcrumb-link {
        color: var(--text-color-primary);
        text-decoration: none;
        opacity: 0.7;
        transition: opacity 0.2s ease;
      }

      .breadcrumb-link::after {
        display: none;
      }

      .breadcrumb-link:hover {
        opacity: 1;
        text-decoration: underline;
        text-decoration-color: var(--text-color-links);
        text-underline-offset: 3px;
      }

      .breadcrumb-separator {
        color: var(--text-color-primary);
        opacity: 0.4;
      }

      .breadcrumb-current {
        color: var(--text-color-primary);
        font-weight: 500;
      }

      .title {
        font-size: 40px;
        text-decoration: underline;
        margin-bottom: 10px;
      }

      .date {
        margin: 0px;
      }

      .intro span:first-child {
        font-weight: bold;
      }

      .intro p:first-child span:not(:first-child) {
        background-color: var(--bg-second);
        padding: 0px 5px;
        border-radius: 1px;
      }

      .quote p {
        margin: 0px;
        margin-top: 5px;
        margin-left: 5px;
      }

      .quote {
        border-left: 5px solid var(--bg-second);
      }

      .review p {
        font-size: 22px;
      }

      figure {
        margin: 40px 0px;
      }

      img {
        max-width: 100%;
      }

      /* Footnotes */
      .footnote {
        background-color: var(--bg-second);
        padding: 30px;
      }

      .footnote__title {
        font-size: 20px;
        text-decoration: underline;
      }

      .footnote__text {
        margin: 0px;
      }

      .footnote li {
        margin-top: 15px;
        display: flex;
        align-items: flex-end;
      }

      .footnote li a {
        margin: 0px 5px;
      }

      a {
        text-decoration: none;
        color: var(--text-color-primary);
        position: relative;
        z-index: 2;
      }

      .link::after,
      a::after {
        content: '';
        width: 100%;
        position: absolute;
        bottom: 0px;
        left: 0px;
        height: 5px;
        background-color: var(--text-color-links);
        z-index: -1;
        transition: all 0.2s;
      }

      .link:hover.link::after,
      a:hover::after {
        height: 100%;
      }

      @media (max-width: 800px) {
        .review p {
          font-size: 18px;
        }

        body {
          width: 90%;
        }

        .footnote li a {
          max-width: 90%;
        }

        .footnote__text {
          text-overflow: ellipsis;
          white-space: nowrap;
          overflow: hidden;
          margin: 0px;
          max-width: 100%;
          position: relative;
        }

        .footnote__text::after {
          content: '';
          width: 100%;
          position: absolute;
          bottom: 0px;
          left: 0px;
          height: 5px;
          background-color: var(--text-color-links);
          z-index: -1;
          transition: all 0.2s;
        }

        .footnote__text:hover.footnote__text::after {
          height: 100%;
        }

        .link::after {
          width: 0%;
        }
      }

      .spoiler {
        background: #333;
        color: #333;
        cursor: pointer;
        transition: all 0.3s ease;
        padding: 2px 4px;
        border-radius: 4px;
        user-select: none;
      }

      .spoiler * {
        color: #333 !important;
        background: transparent;
      }

      .spoiler.revealed {
        background: transparent;
        color: inherit;
      }

      .spoiler.revealed * {
        color: inherit !important;
      }

      /* Inline code styling */
      :not(pre) > code {
        background-color: #2d3748;
        color: #e2e8f0;
        padding: 0.2em 0.4em;
        border-radius: 3px;
        font-size: 0.9em;
        font-family: 'Courier New', Courier, monospace;
        font-weight: 500;
      }
    </style>
  </body>
</html>
